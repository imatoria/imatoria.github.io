@page "/portfolio/tic-tac-toe"

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.4/sweetalert2.min.css">

<PageTitle>Tic Tac Toe</PageTitle>

<section id="portfolio_tic-tac-toe" class="tic-tac-toe">
    <div class="board">
        @for (int i = 0; i < Board.Length; i++)
        {
            int idx = i;
            <div class="square"
                 @onclick="()=> SquareCliked(idx)">
                @if (Board[i] == "")
                {
                    <h5 class="char text-nowrap">&nbsp;</h5>
                }
                else
                {
                    <h5 class="char text-nowrap">@Board[i]</h5>
                }
            </div>
        }
    </div>
</section>

<PageLoadScript Href="portfolio/tic-tac-toe" />

<script src="/js/tic.tac.toe.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.4/sweetalert2.min.js"></script>
